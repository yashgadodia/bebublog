<head>
    <style>
        .center {
            margin: auto;
            width: 50%;
            /* border: 3px solid blue;
            padding: 10px; */
        }
        .center-text {
            margin: auto;
            width: 50%;
            border: 3px solid blue;
            padding: 10px;
        }
    </style>
</head>

<div class="container">
    <div class="card-columns text-center">
        <% @posts.each do |post| %>
                <div class="card">
                    <%# <img class="card-img-top" src="<%= url_for post.optimized_image(post.thumbnail, 586, 180)" alt="Blog Post Image Card" /> %> 
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= link_to post.title, post %>
                        </h5>
                        <p class="card-text">
                            <%= post.body.to_plain_text.truncate_words(rand(25..55)) %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= post.created_at.strftime("%A, %B %e, %Y") %> by
                                <%= post.user.username %> 
                            </small>
                        </p>
                    </div>
                </div>
        <% end %>
    </div>
</div>

<div class="row center">
    <div class="digg_pagination center-text">
        <%= will_paginate @posts, :container => false %>
    </div> 
</div>
