<%# creating content of the actual blog post %>

<div class="container" style="margin-top: 2em">
  <div class="row">
    <div class="jumbotron" style="width:100%">    
      <h1 class="display-4">
        <%= link_to @post.title, root_path %>
      </h1>
      <p class="lead">
        <%= @post.created_at.strftime("%A, %B %e, %Y") %> by <%= @post.user.username %> | <%= pluralize(@post.views, "View") %>
      </p>
      <hr class="my-4" />
      <div class="post_body">
        <%= @post.body %>
      </div>
    <div class="row">
    <% if current_user %>
        <% if current_user.admin %>
            <%# <%= link_to "destroy post", posts_destroy_path(@post), method: :destroy%> 
            <%= link_to "Delete post", @post, method: "delete" %>
            <%= link_to "Edit post", edit_post_path()%>
        <% end %>
    <% end %>
    </div>
    </div>
  </div>
</div>
